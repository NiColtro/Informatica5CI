<Window x:Class="WPF_GiocoOca.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_GiocoOca"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Button Content="Gioca!" Click="PlayButtonHandler" Name="PlayButton" Grid.Row="0"></Button>
        <Button Content="Esci" Click="ExitButtonHandler" Name="ExitButton" Grid.Row="1"></Button>
    </Grid>
</Window>
