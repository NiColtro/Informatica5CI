        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_DepaKahoot"
        mc:Ignorable="d"
        Title="Question" Height="450" Width="800">
    <Grid x:Name="GameGrid">

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Content="TestoDomanda" Name="QuestionText" Grid.Row="0"></Label>

        <StackPanel Orientation="Horizontal" Name="AnswersButtons" Grid.Row="1">

        </StackPanel>
        
    </Grid>
</Window>
