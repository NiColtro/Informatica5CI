<Window x:Class="WFP_Racket.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WFP_Racket"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        >
    <Canvas Name="PlayArea">
        <Ellipse Name="Ball" Fill="Tomato" Width="100" Height="100" Canvas.Top="10" Canvas.Left="10"></Ellipse>
        <Rectangle Name="Racket" Fill="DarkCyan" Width="100" Height="20" Canvas.Bottom="40" Canvas.Left="300"></Rectangle>
    </Canvas>
</Window>
